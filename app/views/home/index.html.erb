

<!-- Page Container -->
<div class="w3-content w3-margin-top" style="max-width:1400px;">

  <!-- The Grid -->
  <div class="w3-row-padding">

    <!-- Left Column -->
    <div class="w3-third">

      <div class="w3-white w3-text-grey w3-card-4">
        <div class="w3-display-container">
          <%= image_tag("me.jpg", :alt => "rss feed",width: '100%') %>
          <div class="w3-display-bottomleft w3-container w3-text-black">
            <h2>Filippo Luppi</h2>
          </div>
        </div>
        <div class="w3-container">
          <br>
          <p><i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal"></i>Developer, Engineering student </p>
          <p><i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal"></i>Italy</p>
          <p><a href ="https://github.com/Filippo95/"><i class="fa fa-github fa-fw w3-margin-right w3-large w3-text-teal"></i>Github</a></p>
          <p><a href=""><i class="fa fa-linkedin fa-fw w3-margin-right w3-large w3-text-teal"></i></a></p>
          <hr>


        </div>
      </div><br>

    <!-- End Left Column -->
    <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                          <h3 class="panel-title">Iscritivi alla Newsletter</h3>
                        </div>
                        <div class="panel-body">

                            <form class="form-inline" role="search">
                            <div class="form-group">
                              <input type="text" class="form-control" placeholder="email">
                            </div>
                            <button type="submit" class="btn btn-outline-success">Iscriviti</button>
                          </form>
                        </div>
                      </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="w3-twothird">

      <div class="w3-container w3-card-2 w3-white w3-margin-bottom">
        <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-suitcase fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Progetti</h2>

      </div>
        <div id="posts">
          <% @posts.each do |post| %>
          <div class="w3-container w3-card-2 w3-white w3-margin-bottom">
            <h2 clss="w3-text-grey w3-padding-16"><%= post.title %></h2>
            <p id="text"><%= post.body %></p>...<%= link_to 'altro', post%>

          </div>
          <script>
          $('#text').each(function(){
          var $this = $(this);
          var t = $this.text();
          $this.html(t.replace('&lt','<').replace('&gt', '>'));
          });
          </script>
          <% end %>
      </div>
  </div>

  <!-- End Grid -->
  </div>

  <!-- End Page Container -->
</div>
